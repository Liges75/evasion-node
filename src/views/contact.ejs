<%- include('partials/header') %>

<main>
  <!-- Formulaire de contact -->
  <section class="contact-section" style="font-family: 'Quicksand', sans-serif; margin-top: 100px; margin-bottom: 5%;">
    <div class="container">
      <h2 class="text-center mb-4" style="font-size: 3rem; color: #FD7103;">Contactez-nous</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          
          <% if (success) { %>
            <div class="alert alert-success text-center">
              Merci <strong><%= nom %></strong>, votre message a bien été envoyé !
            </div>
          <% } %>

          <form action="/contact" method="POST" class="mx-auto" style="max-width: 600px;">
            <div class="mb-3">
              <label for="lastname" class="form-label" style="font-size: 1.6rem;">Nom</label>
              <input type="text" class="form-control" id="lastname" name="nom" required>
            </div>
            <div class="mb-3">
              <label for="firstname" class="form-label" style="font-size: 1.6rem;">Prénom</label>
              <input type="text" class="form-control" id="firstname" name="prenom" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label" style="font-size: 1.6rem;">Adresse e-mail</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label" style="font-size: 1.6rem;">Sujet</label>
              <input type="text" class="form-control" id="subject" name="sujet" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label" style="font-size: 1.6rem;">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" placeholder="Votre message ici..." required></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary" style="background-color: #FD7103; border: none; font-size: 1.6rem;">Envoyer le message</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
