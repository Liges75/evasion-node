<%- include('partials/header') %>

<main class="container my-5">
  <h1 class="text-center mb-4">Espace Utilisateur</h1>

  <section class="card shadow p-4 mb-5">
    <h3 class="text-primary mb-3">Informations personnelles</h3>
    <p><strong>Nom :</strong> <%= user.nom_user %></p>
    <p><strong>Prénom :</strong> <%= user.prenom_user %></p>
    <p><strong>Email :</strong> <%= user.email_user %></p>
    <p><strong>Téléphone :</strong> <%= user.tel_user %></p>
  </section>

  <section class="card shadow p-4 mb-5">
    <h3 class="text-primary mb-3">Derniers messages reçus</h3>
    <% if (messages && messages.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Sujet</th>
            <th>Date</th>
            <th>Statut</th>
          </tr>
        </thead>
        <tbody>
          <% messages.forEach(m => { %>
            <tr>
              <td><%= m.nom %> <%= m.prenom %></td>
              <td><%= m.email %></td>
              <td><%= m.sujet %></td>
              <td><%= m.date_message %></td>
              <td>
                <span class="badge 
                  <%= m.statut === 'non lu' ? 'bg-danger' : 
                      m.statut === 'lu' ? 'bg-warning text-dark' : 
                      'bg-success' %>">
                  <%= m.statut %>
                </span>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/admin/messages" class="btn btn-outline-primary">Voir tous les messages</a>
    <% } else { %>
      <p class="text-muted">Aucun message récent.</p>
    <% } %>
  </section>

  <section class="card shadow p-4">
    <h3 class="text-primary mb-3">Liste des clients</h3>
    <% if (clients && clients.length > 0) { %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Date d’inscription</th>
          </tr>
        </thead>
        <tbody>
          <% clients.forEach(c => { %>
            <tr>
              <td><%= c.nom_user %></td>
              <td><%= c.prenom_user %></td>
              <td><%= c.email_user %></td>
              <td><%= c.tel_user %></td>
              <td><%= c.date_inscription %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-muted">Aucun client trouvé.</p>
    <% } %>
  </section>
</main>

<%- include('partials/footer') %>
