<%- include('partials/header') %>

<main class="container my-5">
  <h1 class="text-center mb-4">Mot de passe oublié</h1>

  <% if (success) { %>
    <div class="alert alert-success">Un lien de réinitialisation a été envoyé à votre adresse e-mail.</div>
  <% } else if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="POST" action="/forgot-password" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
      <label for="email" class="form-label">Adresse e-mail</label>
      <input type="email" name="email" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-warning w-100 text-white fw-bold">Envoyer le lien</button>
  </form>
</main>

<%- include('partials/footer') %>
